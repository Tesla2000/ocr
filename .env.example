# OUTPUT__CREDENTIALS_PATH=./drive-access-key.json
# OUTPUT__DIRECTORY_ID=output_folder_id
# OUTPUT__FILENAME=processed.txt
# OUTPUT__TRANSFORMATIONS__0__TYPE=llm-cleanup
# OUTPUT__TRANSFORMATIONS__0__LLM_PROVIDER__TYPE=anthropic
